

<nav class="navbar navbar-default " role="navigation" style="margin-bottom:0px;">
    <div class="navbar-header">
        @Html.ActionLink("Admin", "Index", new { controller = "Admin" }, new { @class = "navbar-brand" })
    </div>
    <ul class="nav navbar-right top-nav">
        @if (Request.IsAuthenticated)
        {
            <li class="dropdown">
                @using (Html.BeginForm("LogOff", "Auth", FormMethod.Post, new { id = "logoutForm", @class = "form-css" }))
                {
                   
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-user"></i> @User.Identity.Name <b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li>
                            <a href="#"><i class="fa fa-fw fa-user"></i> Profile</a>
                        </li>
                        <li>
                            <a href="#"><i class="fa fa-fw fa-envelope"></i> Inbox</a>
                        </li>
                        <li>
                            <a href="#"><i class="fa fa-fw fa-gear"></i> Settings</a>
                        </li>
                        <li class="divider"></li>
                        <li>
                            <a href="javascript:document.getElementById('logoutForm').submit()"><i class="fa fa-fw fa-power-off"></i> Log Out</a>
                        </li>
                    </ul>
                }
            </li>
        }
        else
        {
            <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
        }
    </ul><!--Right top varbar panel-->


</nav>

<style>
    .form-css {
        display: block;
        padding: 15px;
        position: relative;
    }
