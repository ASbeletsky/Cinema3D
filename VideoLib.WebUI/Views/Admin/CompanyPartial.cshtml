@model VideoLib.WebUI.Models.Admin.CompanyPanelViewModel

@using (Ajax.BeginForm("EditCompany", null,
                                  new AjaxOptions
                                  {
                                      HttpMethod = "POST",
                                      OnSuccess = "Success"
                                  }, new { id = "EditCompanyForm" }))
{
    @Html.DropDownListFor(m => m.DropDown.SelectedCompanyId, Model.DropDown.CompanyItems, new { id = "CompanyDropDown", @class = "form-control" })
    <p> Выбирете действие с </p>
    @Html.TextBoxFor(m => m.Text, new { id = "CompanyTextBox", @class = "form-control" })
    @Html.ValidationMessageFor(m => m.Text)
}


