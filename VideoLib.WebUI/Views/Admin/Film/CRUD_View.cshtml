@using VideoLib.WebUI.Models.Admin
@model CRUD_FilmViewModel

<div id="CRUDmodel" class="col-md-12">
    <div class="panel panel-@Model.Style">

        <div class="panel-heading">
            <h5 class="text-center">@Model.Title</h5>
        </div>

        @using (Ajax.BeginForm(Model.Action, null, new AjaxOptions() { HttpMethod = "POST", OnSuccess = "OnSuccess" }, new {id = "CRUD_Form" }))
        {
            <div id="modal_body" class="row panel-body">
                <div class="form-horizontal">
                    <div class="row col-md-12">
                        <div class="col-md-6 ">
                            <h4 class="text-center">Общая информация</h4>

                            @Html.HiddenFor(m => m.Id)
                            <div class="form-group inline-group has-feedback">
                                <div class="col-md-4">@Html.LabelFor(m => m.Name)</div>
                                <div class="col-md-8 ">
                                    <div class="input-group">
                                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })                                      
                                        <span class="input-group-addon @ViewBag.Style">*</span>
                                    </div>
                                </div>
                                @Html.ValidationMessageFor(m => m.Name)
                            </div>

                            <div class="form-group inline-group">
                                <div class="col-md-4">@Html.LabelFor(m => m.Genre.SelectedGenreId)</div>
                                <div class="col-md-8"> @Html.DropDownListFor(m => m.Genre.SelectedGenreId, Model.Genre.GenreItems, "Жанр", new { @class = "combobox form-control" })</div>
                                
                            </div>


                            <div class="form-group inline-group">
                                <div class="col-md-4">@Html.LabelFor(m => m.Country.SelectedCountryId)</div>
                                <div class="col-md-8">@Html.DropDownListFor(m => m.Country.SelectedCountryId, Model.Country.CountryItems, "Производитель", new { @class = "combobox form-control" })</div>
                                
                            </div>

                            <div class="form-group inline-group">
                                <div class="col-md-4">@Html.LabelFor(m => m.Company.SelectedCompanyId)</div>
                                <div class="col-md-8">@Html.DropDownListFor(m => m.Company.SelectedCompanyId, Model.Company.CompanyItems, "Кинокомпания", new { @class = "combobox form-control" })</div>
                                
                            </div>


                            <div class="form-group inline-group">
                                <div class="col-md-4">@Html.LabelFor(m => m.ReleaseDate)</div>
                                <div class="col-md-8">
                                    <div id='releaseDatePicker' class="input-group date">
                                        <input type='text' class="form-control" name="ReleaseDate" />
                                        <span class="input-group-addon">
                                            <span class="glyphicon glyphicon-calendar"></span>
                                        </span>
                                    </div>
                                </div>

                                @Html.ValidationMessageFor(m => m.ReleaseDate)
                            </div>

                            <div class="form-group inline-group">
                                <div class="col-md-4">@Html.LabelFor(m => m.TimeDuration)</div>
                                <div class="col-md-8">
                                    <div id='timeDurationPicker' class="input-group date">
                                        <input type='text' class="form-control" name="TimeDuration" />
                                        <span class="input-group-addon">
                                            <span class="glyphicon glyphicon-time"></span>
                                        </span>
                                    </div>
                                    @Html.ValidationMessageFor(m => m.ReleaseDate)
                                </div>
                            </div>
                            <br /> <hr /> <br />
                            <div class="form-group inline-group">
                                <div class="col-md-4">@Html.LabelFor(m => m.DownloadUrl)</div>
                                <div class="col-md-8 ">
                                    <div class="input-group">
                                        @Html.TextBoxFor(m => m.DownloadUrl, new { @class = "form-control" })
                                        <span class="input-group-addon success"><i class="fa fa-download"></i></span>
                                    </div>
                                </div>
                                @Html.ValidationMessageFor(m => m.DownloadUrl)
                            </div>

                        </div><!--Col-md-6-->
                        <div class="col-md-6">
                            <h4 class="text-center">Съемочная группа</h4>

                            <div class="form-group inline-group">
                                <div class="col-md-4">@Html.LabelFor(m => m.Producer, new { @class = "control-label" })</div>
                                <div class="col-md-8">@Html.TextBoxFor(m => m.Producer, new { @class = "form-control" })</div>
                                @Html.ValidationMessageFor(m => m.Producer)
                            </div>

                            <div class="form-group inline-group">
                                <div class="col-md-4">@Html.LabelFor(m => m.Operator, new { @class = "control-label" })</div>
                                <div class="col-md-8">@Html.TextBoxFor(m => m.Operator, new { @class = "form-control" })</div>
                                @Html.ValidationMessageFor(m => m.Operator)
                            </div>

                            <div class="form-group inline-group">
                                <div class="col-md-4">@Html.LabelFor(m => m.Painter, new { @class = "control-label" })</div>
                                <div class="col-md-8">@Html.TextBoxFor(m => m.Painter, new { @class = "form-control" })</div>
                                @Html.ValidationMessageFor(m => m.Painter)
                            </div>

                            <div class="form-group inline-group">
                                <div class="col-md-4">@Html.LabelFor(m => m.Composer, new { @class = "control-label" })</div>
                                <div class="col-md-8">@Html.TextBoxFor(m => m.Composer, new { @class = "form-control" })</div>
                                @Html.ValidationMessageFor(m => m.Composer)
                            </div>

                            <div class="form-group inline-group">
                                <div class="col-md-4">@Html.LabelFor(m => m.Director, new { @class = "control-label" })</div>
                                <div class="col-md-8">@Html.TextBoxFor(m => m.Director, new { @class = "form-control" })</div>
                                @Html.ValidationMessageFor(m => m.Director)
                            </div>

                            <h4 class="text-center">Ссылки на картинки</h4>
                            <div class="form-group inline-group">

                                <div class="col-md-4"><br />@Html.LabelFor(m => m.ImageBigUrl, new { @class = "control-label" })</div>
                                <div class="col-md-8"><br />@Html.TextBoxFor(m => m.ImageBigUrl, new { id = "bigImageLink", @class = "form-control" })</div>
                                @Html.ValidationMessageFor(m => m.ImageBigUrl)
                            </div>

                            <div class="form-group inline-group">
                                <div class="col-md-4"><br />@Html.LabelFor(m => m.ImageSmallUrl, new { @class = "control-label" })</div>
                                <div class="col-md-8"><br />@Html.TextBoxFor(m => m.ImageSmallUrl, new { id = "smallImageLink", @class = "form-control" })</div>
                                @Html.ValidationMessageFor(m => m.ImageSmallUrl)
                            </div>



                        </div><!--Col-md-6-->
                    </div> <!--Top Row-->

                </div>


            </div><!--Modal body-->


            <div class="panel-footer">
                <div class="panel">
                    <div >
                        @Html.TextAreaFor(m => m.Describtion, 6, 3, new { @class = "summernote form-control" })
                    </div>
                </div>
                <input type="submit" value="Сохранить" class="btn btn-@Model.Style" />
                <a id="cancel" class="btn" data-dismiss="modal">Отмена</a>
            </div>
        }
    </div>


</div>


<script type="text/javascript" language=javascript>
    $('#Describtion').click(function () {      
        $('.summernote').summernote({
            height: 140,                 // set editor height
            //minHeight: null,             // set minimum height of editor
            maxHeight: 300,             // set maximum height of editor
            focus: true,                 // set focus to editable area after initializing summernote
        });
    });
    $(".bigImageLink").change(function () {
        var link = $(".bigImageLink").val();
        $('#bigImage').attr('src', link);
    });
    $('#cancel').click(function () {
        $('#CRUDmodel').addClass('hide');
        $("#sideNavbar").height('100vh');
    });
</script>
