@model VideoLib.WebUI.Models.Admin.GenrePanelViewModel

@using (Ajax.BeginForm("EditGenre", null,
                                  new AjaxOptions
                                  {
                                      HttpMethod = "POST",
                                      OnSuccess = "Success"
                                  }, new { id = "EditGenreForm" }))
{
    @Html.DropDownListFor(m => m.DropDown.SelectedGenreId, Model.DropDown.GenreItems, new { id = "GenreDropDown", @class = "form-control" })
    <p> Выбирете действие с </p>
    @Html.TextBoxFor(m => m.Text, new { id = "GenreTextBox", @class = "form-control" })
    @Html.ValidationMessageFor(m => m.Text)
}
